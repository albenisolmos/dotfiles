#include <stdio.h>
#include <olmosui/ol_box_expander.h>

static void on_activate(GtkApplication*, gpointer);
static void on_drag_data_get(
		GtkWidget *widget,
		GdkDragContext *context,
		GtkSelectionData *selection_data,
		guint info,
		guint32 time,
		gpointer data
);

int main(int argc, char *argv[])
{
	GtkApplication *app = gtk_application_new("olmos.tests", G_APPLICATION_FLAGS_NONE);
	g_signal_connect(app, "activate", G_CALLBACK(on_activate), NULL);
	int status = g_application_run(G_APPLICATION(app), argc, argv);

	g_object_unref(app);
	return status;
}

static void on_activate(GtkApplication *app, gpointer data) {
	GtkWidget *window, *box, *child, *child2;
	GtkTargetEntry entries[] = {
		{"text/plain", 0, 0}
	};

	box = gtk_box_new(GTK_ORIENTATION_HORIZONTAL, 0);
	ol_dnd_expander_setup_dest(box, entries);

	for (int i = 0; i < 10; i++)
	{
		char label[1];
		sprintf(label, "%d", i);
		child = gtk_button_new_with_label((char *)&label);
		g_signal_connect(child, "drag-data-get",
				G_CALLBACK(on_drag_data_get), NULL);
		child2 = ol_dnd_expander_setup_child(child, entries);
		gtk_container_add(GTK_CONTAINER(box), child2);
	}

	window = gtk_application_window_new(app);
	gtk_widget_set_name(window, "OlmosTest");
	gtk_container_add(GTK_CONTAINER(window), box);
	gtk_widget_show_all(window);
}

static void on_drag_data_get(
		GtkWidget *widget,
		GdkDragContext *context,
		GtkSelectionData *selection_data,
		guint info,
		guint32 time,
		gpointer data
) {
	gtk_selection_data_set(
			selection_data,
			gdk_atom_intern_static_string("GTK_BUTTON"),
			32,
			(const guchar *) &widget,
			sizeof (gpointer)
	);
}
