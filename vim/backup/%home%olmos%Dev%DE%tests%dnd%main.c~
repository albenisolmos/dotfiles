#include <olmosui/ol_box_expander.h>

static void on_activate(GtkApplication*, gpointer);

int main(int argc, char *argv[])
{
	GtkApplication *app = gtk_application_new("olmos.tests", G_APPLICATION_FLAGS_NONE);
	g_signal_connect(app, "activate", G_CALLBACK(on_activate), NULL);
	int status = g_application_run(G_APPLICATION(app), argc, argv);

	g_object_unref(app);
	return status;
}

static void on_activate(GtkApplication *app, gpointer data) {
	GtkWidget *window, *box;
	GtkTargetEntry entries[] = {
		{"text/plain", 0, 0}
	};

	box = gtk_box_new(GTK_ORIENTATION_HORIZONTAL, 0);
	ol_box_expander_new(box, entries);
	//gtk_container_add(GTK_CONTAINER(box), launcher);

	window = gtk_application_window_new(app);
	gtk_widget_set_name(window, "OlmosTest");
	gtk_container_add(GTK_CONTAINER(window), box);
	gtk_widget_show_all(window);
}
